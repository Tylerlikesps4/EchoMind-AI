import { useState, useRef } from 'react';
import { Button } from "@/components/ui/button";
import { Textarea } from "@/components/ui/textarea";
import { Send, Image as ImageIcon, Wand2, Sparkles } from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';
import { cn } from "@/lib/utils";
import VoiceInput from './VoiceInput';
import { base44 } from '@/api/base44Client';
import { toast } from 'sonner';

export default function ChatInput({ onSend, disabled, onImageGenerate }) {
    const [message, setMessage] = useState('');
    const [uploadingImage, setUploadingImage] = useState(false);
    const textareaRef = useRef(null);
    const fileInputRef = useRef(null);

    const handleSubmit = (e) => {
        e.preventDefault();
        if (message.trim() && !disabled) {
            onSend(message.trim());
            setMessage('');
            if (textareaRef.current) {
                textareaRef.current.style.height = 'auto';
            }
        }
    };

    const handleKeyDown = (e) => {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            handleSubmit(e);
        }
    };

    const handleTextareaChange = (e) => {
        setMessage(e.target.value);
        e.target.style.height = 'auto';
        e.target.style.height = Math.min(e.target.scrollHeight, 150) + 'px';
    };

    const handleVoiceTranscript = (transcript) => {
        setMessage(prev => prev + (prev ? ' ' : '') + transcript);
    };

    const handleImageUpload = async (e) => {
        const file = e.target.files?.[0];
        if (!file) return;

        setUploadingImage(true);
        try {
            const { file_url } = await base44.integrations.Core.UploadFile({ file });
            toast.success('Image uploaded!');
            // Send image with optional caption
            onSend(message.trim() || 'Shared an image', [file_url]);
            setMessage('');
        } catch (error) {
            toast.error('Failed to upload image');
        } finally {
            setUploadingImage(false);
        }
    };

    const handleGenerateImage = () => {
        if (onImageGenerate) {
            onImageGenerate();
        }
    };

    return (
        <form onSubmit={handleSubmit} className="relative">
            <div className="relative bg-slate-800/50 backdrop-blur-xl border border-slate-700/50 rounded-3xl p-2 shadow-2xl shadow-black/20">
                <div className="flex items-end gap-2">
                    <Textarea
                        ref={textareaRef}
                        value={message}
                        onChange={handleTextareaChange}
                        onKeyDown={handleKeyDown}
                        placeholder="Message ARIA..."
                        disabled={disabled}
                        className={cn(
                            "flex-1 resize-none border-0 bg-transparent text-slate-100 placeholder:text-slate-500",
                            "focus-visible:ring-0 focus-visible:ring-offset-0",
                            "min-h-[44px] max-h-[150px] py-3 px-4 text-[15px]"
                        )}
                        rows={1}
                    />
                    
                    <div className="flex items-center gap-1 pr-1 pb-1">
                        <input
                            ref={fileInputRef}
                            type="file"
                            accept="image/*"
                            onChange={handleImageUpload}
                            className="hidden"
                        />
                        
                        <Button
                            type="button"
                            size="icon"
                            onClick={() => fileInputRef.current?.click()}
                            disabled={disabled || uploadingImage}
                            className="h-10 w-10 rounded-2xl bg-slate-700/50 hover:bg-slate-600/50 text-slate-400 hover:text-slate-200"
                        >
                            <ImageIcon className="h-5 w-5" />
                        </Button>

                        <Button
                            type="button"
                            size="icon"
                            onClick={handleGenerateImage}
                            disabled={disabled}
                            className="h-10 w-10 rounded-2xl bg-slate-700/50 hover:bg-slate-600/50 text-slate-400 hover:text-slate-200"
                        >
                            <Wand2 className="h-5 w-5" />
                        </Button>

                        <VoiceInput 
                            onTranscript={handleVoiceTranscript} 
                            disabled={disabled}
                        />
                        
                        <AnimatePresence mode="wait">
                            {message.trim() && (
                                <motion.div
                                    initial={{ scale: 0 }}
                                    animate={{ scale: 1 }}
                                    exit={{ scale: 0 }}
                                >
                                    <Button
                                        type="submit"
                                        size="icon"
                                        disabled={disabled}
                                        className="h-10 w-10 rounded-2xl bg-gradient-to-r from-violet-600 to-purple-600 hover:from-violet-500 hover:to-purple-500 shadow-lg shadow-purple-500/25 transition-all duration-200"
                                    >
                                        <Send className="h-4 w-4" />
                                    </Button>
                                </motion.div>
                            )}
                        </AnimatePresence>
                    </div>
                </div>
            </div>
            
            <div className="flex items-center justify-center gap-1 mt-2 text-xs text-slate-600">
                <Sparkles className="h-3 w-3" />
                <span>Powered by advanced AI</span>
            </div>
        </form>
    );
}
